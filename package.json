{
  "name": "personal-invoice-manager",
  "version": "1.0.0",
  "description": "A desktop application to manage personal invoices",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "react-build": "react-scripts build",
    "electron-dev": "concurrently \"npm:react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "clean": "node clean.js",
    "dist": "npm run clean && npm run react-build && electron-builder --win portable"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "jspdf": "^2.5.1",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "wait-on": "^7.0.1",
    "cross-env": "^10.0.0"
  },
  "build": {
    "appId": "com.example.personal-invoice-manager",
    "productName": "Personal Invoice Manager",
    "files": [
      "build/**/*",
      "*.js",
      "database_schema.sql"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": ["portable"]
    },
    "portable": {
      "artifactName": "PersonalInvoiceManager.exe"
    },
    "asar": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}